{
  "name": "ui-builder",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --experimental-https",
    "build": "next build",
    "start": "next start -p 60125",
    "lint": "next lint",
    "gen:component": "plop component",
    "prettier": "prettier --write ./**/*.{ts,tsx,js,jsx,json,md,yml,css} --log-level error --no-error-on-unmatched-pattern",
    "typescript": "tsc --noEmit",
    "tests:run": "npx playwright test",
    "tests:run:ui": "npx playwright test --ui",
    "tests:run:update": "npx playwright test --update-snapshots",
    "tests:report": "npx playwright show-report",
    "tests:clear": "rm -rf ./test-results ./playwright-report",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@fontsource/ubuntu": "^5.1.1",
    "@gravity-ui/icons": "^2.13.0",
    "classnames": "^2.5.1",
    "dotenv": "^17.2.0",
    "jotai": "^2.12.0",
    "next": "^15",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ua-parser-js": "^2.0.3"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.50.1",
    "@storybook/addon-a11y": "^9.0.17",
    "@storybook/addon-docs": "^9.0.17",
    "@storybook/addon-onboarding": "^9.0.17",
    "@storybook/addon-themes": "^9.0.17",
    "@storybook/addon-vitest": "^9.0.17",
    "@storybook/nextjs-vite": "^9.0.17",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "^15",
    "eslint-plugin-storybook": "^9.0.17",
    "husky": "^9.1.7",
    "playwright": "^1.54.1",
    "plop": "^4.0.1",
    "prettier": "^3.5.1",
    "storybook": "^9.0.17",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
